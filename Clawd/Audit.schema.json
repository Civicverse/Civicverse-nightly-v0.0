{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ClawdBot Audit Bundle",
  "description": "Required audit information for any autonomous change",
  "type": "object",
  "required": [
    "change_id",
    "timestamp",
    "summary",
    "rationale",
    "scope_check",
    "ethics_check",
    "tests",
    "files_changed",
    "rollback_plan"
  ],
  "properties": {
    "change_id": {
      "type": "string",
      "description": "Unique identifier for the change"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "summary": {
      "type": "string",
      "description": "Plain-language description of what changed"
    },
    "rationale": {
      "type": "string",
      "description": "Why this change improves the system"
    },
    "scope_check": {
      "type": "object",
      "required": ["within_scope"],
      "properties": {
        "within_scope": {
          "type": "boolean"
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "ethics_check": {
      "type": "object",
      "required": ["compliant"],
      "properties": {
        "compliant": {
          "type": "boolean"
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "tests": {
      "type": "object",
      "required": ["tests_run", "all_passed"],
      "properties": {
        "tests_run": {
          "type": "array",
          "items": { "type": "string" }
        },
        "all_passed": {
          "type": "boolean"
        }
      }
    },
    "files_changed": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "rollback_plan": {
      "type": "string",
      "description": "How to safely revert this change"
    }
  }
}
